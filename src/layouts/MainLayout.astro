---
import Navbar from "../components/Navbar.astro"
import MainHead from "./MainHead.astro"

const { title, seoTitle, seoDesc } = Astro.props
---

<html>
    <MainHead title={ title } seoTitle={ seoTitle } seoDesc={ seoDesc }/>
    <body class="bg-[#29303B] text-slate-300">
        <header>
            <Navbar/>
        </header>
        <div class="flex flex-col">
        <div class="h-10 flex flex-col"></div>
        <div class="flex flex-col px-0 md:px-21 min-h-screen overflow-y-auto custom-scrollbar overscroll-none">
            <slot/>
        </div>
        </div>
    </body>
</html>